<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name) ,:class =>'form-horizontal') do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true , :class =>'input' %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
<%= link_to('Connect with facebook', user_omniauth_authorize_path('facebook'), 
:class => 'display-block float-right buzz-facebook-button') %>
