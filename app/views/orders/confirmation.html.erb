<% if user_signed_in? %>
	<div  class="container span6">

	<%= form_for @user,url:user_session_path ,html:{:class =>'form-horizontal',:id=>'login-form'} do |f|%>
	<fieldset>
	<div class="control-group">
		<lebel>Email :</lebel>
		<div class='control'>
			<%= f.text_field :email , :class=>'span3'%>
		</div>
	</div>
	<div class="control-group">
		<lebel>Password :</lebel>
		<div class='control'>
			<%= f.password_field :password , :class=>'span3'%>
		</div>
	</div>

	</fieldset>
	<%= f.submit "Sign in" , :class=>'btn btn-primary'%>
	<% end %>
	<%=link_to "Forget Password",'#',:class => 'btn'%>
	<%=link_to "Signup" , new_user_registration_path , :class => 'btn'%>
	</div>
<% else %>
	<div  class="container span6">

	<%= form_for current_user.addresses.build ,url:user_session_path ,html:{:class =>'form-horizontal',:id=>'login-form'} do |f|%>
	<fieldset>
	<div class="control-group">
		<lebel>Email :</lebel>
		<div class='control'>
			<%= f.text_field :email , :class=>'span3'%>
		</div>
	</div>
	<div class="control-group">
		<lebel>Password :</lebel>
		<div class='control'>
			<%= f.password_field :password , :class=>'span3'%>
		</div>
	</div>

	</fieldset>
	<%= f.submit "Sign in" , :class=>'btn btn-primary'%>
	<% end %>
	<%=link_to "Forget Password",'#',:class => 'btn'%>
	<%=link_to "Signup" , new_user_registration_path , :class => 'btn'%>
	</div>

<% end %>