<div class='breadcrumb'>
	<span>Users</span>
	<% if can? :update , @products %>
			<%=link_to "New User",new_admin_product_path ,:class =>'btn btn-primary company-reg-link' %>
	<% end %>
	
	
</div>
<table class='table table-striped'>
	<thead>
	<tr>
		<th>Name</th>
		<th>Company</th>
		<th>Price</th>
		<th>Options</th>
	</tr>
	</thead>
	<tbody>
	<% @products.each do |p|%>
	<tr>
		<td><%= p.name %></td>
		<td><%= p.company.nil? ? "-------" : p.company.name%></td>
		<td><%= p.price.nil? ?  "---------" : p.price %></td>
		<td>
			<% if can? :update , p %>
			<%=link_to 'Edit',edit_admin_product_path(p), :class=>'btn' %>
			<% end %>
		</td>
	</tr>
	<% end %>
	</tbody>
</table>

