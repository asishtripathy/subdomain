<div  class="container span6">

<%= form_for @company ,:url => admin_companies_path,html:{:class =>'form-horizontal',:id=>'login-form'} do |f|%>
<fieldset>
<div class="control-group">
	<lebel>Name :</lebel>
	<div class='control'>
		<%= f.text_field :name , :class=>'span3'%>
	</div>
</div>
<div class="control-group">
	<lebel>Domain :</lebel>
	<div class='control'>
		<%= f.text_field :domain , :class=>'span3'%>
	</div>
</div>
<div class="control-group">
	<lebel>Phone :</lebel>
	<div class='control'>
		<%= f.text_field :phone , :class=>'span3'%>
	</div>
</div>
</fieldset>
<%= f.submit "Add Company" , :class=>'btn btn-primary'%>
<% end %>

</div>