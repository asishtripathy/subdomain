<div  class="container span6">

<%= form_for @user ,:url => admin_users_path,html:{:class =>'form-horizontal',:id=>'login-form'} do |f|%>
<fieldset>
<div class="control-group">
	<lebel>Name :</lebel>
	<div class='control'>
		<%= f.text_field :name , :class=>'span3'%>
	</div>
</div>
<div class="control-group">
	<lebel>Email :</lebel>
	<div class='control'>
		<%= f.text_field :email , :class=>'span3'%>
	</div>
</div>
<div class="control-group">
	<lebel>Password :</lebel>
	<div class='control'>
		<%= f.password_field :password , :class=>'span3'%>
	</div>
</div>
<div class="control-group">
	<lebel>Role :</lebel>
	<div class='control'>
		<div style='display:none;'>
		<%= @user.build_role %>
		</div>
		<%= f.fields_for :role do |builder|%>
		Admin : <%= builder.radio_button :role , "admin" %>
		Employee <%= builder.radio_button :role , "employee"%>
		<% end %>
	</div>
</div>
<div class="control-group">
	<lebel>Company :</lebel>
	<div class='control'>
		<div style='display:none;'>
		<%= @user.company_users.build %>
		</div>
		<%= f.fields_for :company_users do |builder|%>
		<%= builder.select :company_id , options_from_collection_for_select(@companies,"id","name")%>
		<% end %>
	</div>
</div>
</fieldset>
<%= f.submit "Add User" , :class=>'btn btn-primary'%>
<% end %>

</div>